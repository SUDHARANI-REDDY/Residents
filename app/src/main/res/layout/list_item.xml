<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/art_image"
                android:layout_width="177dp"
                android:layout_height="155dp"
                android:scaleType="centerCrop"

                />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text="Vishwajith"
                android:textColor="#666884"
                android:textSize="17sp"
                app:fontFamily="@font/poppins_semibold"
                />

            <TextView
                android:id="@+id/art_desc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="lorem lorem"
                app:fontFamily="@font/poppins_light"
                android:lineSpacingExtra="10sp"
                android:textColor="#666884"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/checkbio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text=" Check Bio"
                android:textColor="#eb2429"
                android:textSize="16sp"
                app:fontFamily="@font/poppins" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>